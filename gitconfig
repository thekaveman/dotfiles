[core]
    editor = code --wait
    excludesfile = ~/.gitignore_global
    filemode = false
    fsMonitor = false
    symlinks = true
    untrackedCache = true

[color]
    diff = auto
    ui = auto

[color "diff"]
    frag = magenta
    old = red bold
    new = green bold

[grep]
    lineNumber = true

[help]
    autocorrect = 1

[fetch]
    prune = true

[pull]
    rebase = true

[rebase]
    autoStash = true

# Allow local customizations in the .gitconfig_local file
[include]
    path = ~/.gitconfig_local
