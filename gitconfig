[alias]
    autosquash = rebase -i --autosquash
    amend = commit --amend --no-edit
    diffs = diff --staged
    ff = merge --ff-only
    fix = commit --fixup
    pullrb = pull --rebase
    rbi = rebase -i
    reword = commit --amend
    save = commit -a -m "save"
    unstage = restore --staged
    update-submodules = submodule update --init --recursive
    upgrade-submodules = submodule update --init --remote

